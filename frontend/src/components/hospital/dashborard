import { LockClosedIcon } from '@heroicons/react/20/solid'
import Header from '../Header'
import axios from 'axios'
import { useNavigate, NavLink } from 'react-router-dom'
import { useState, useEffect } from 'react'

export default function Login() {
  const navigate = useNavigate()

  const [wrong, setWrong] = useState("")
  const [loading, setLoading] = useState(false)

  // ✅ Run only once on component mount
  useEffect(() => {
    const sessionKey = localStorage.getItem("sessionKey")
    const email = localStorage.getItem("email")

    if (sessionKey && email) {
      axios.post(process.env.REACT_APP_API + "/hospital/session", {
        email,
        sessionKey
      })
      .then(res => {
        if (res.data.status === "authenticated") {
          localStorage.setItem("currentPage", "Basic")
          navigate("/hospital/dashboard", { state: res.data.data })
        }
      })
      .catch(err => {
        console.log("Session check failed:", err)
      })
    }
  }, [navigate])

  // ✅ Handle Login
  function handleLogin(event) {
    event.preventDefault()
    setWrong("")
    setLoading(true)

    const email = event.target.email.value
    const password = event.target.password.value

    axios.post(process.env.REACT_APP_API + "/hospital/login", {
      email,
      password
    })
    .then(res => {
      if (res.data.status === "authenticated") {
        localStorage.setItem("email", email)
        localStorage.setItem("sessionKey", res.data.sessionKey)
        localStorage.setItem("currentPage", "Basic")

        navigate("/hospital/dashboard", { state: res.data.data })
      } else if (res.data.status === "wrongPassword") {
        setWrong("wrongPassword")
      } else {
        setWrong("emailNotRegistered")
      }
    })
    .catch(err => {
      console.log("Login error:", err)
      setWrong("serverError")
    })
    .finally(() => {
      setLoading(false)
    })
  }

  return (
    <>
      <Header />

      <div className="flex min-h-full items-center justify-center px-4 py-12 sm:px-6 lg:px-8">
        <div className="w-full max-w-md space-y-8">

          <div>
            <img className="mx-auto h-12 w-auto" src="/logo.png" alt="Logo" />
            <h2 className="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">
              Sign in as hospital
            </h2>
            <p className="mt-2 text-center text-sm text-gray-600">
              Don't have an account?{" "}
              <NavLink to="/hospital/register" className="font-medium text-indigo-600 hover:text-indigo-500">
                Sign up
              </NavLink>
            </p>
          </div>

          <form className="mt-8 space-y-6" onSubmit={handleLogin}>

            <div className="-space-y-px rounded-md shadow-sm">

              {wrong === "emailNotRegistered" && (
                <p className="text-red-500 text-sm mb-2">Email is not registered</p>
              )}

              {wrong === "wrongPassword" && (
                <p className="text-red-500 text-sm mb-2">Wrong password</p>
              )}

              {wrong === "serverError" && (
                <p className="text-red-500 text-sm mb-2">Server error. Please try again.</p>
              )}

              <input
                name="email"
                type="email"
                autoComplete="email"
                required
                className="relative block w-full rounded-t-md border-0 py-2 px-3 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm"
                placeholder="Email address"
              />

              <input
                name="password"
                type="password"
                autoComplete="current-password"
                required
                className="relative block w-full rounded-b-md border-0 py-2 px-3 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm"
                placeholder="Password"
              />

            </div>

            <div className="text-sm text-right">
              <NavLink to="/forget" className="font-medium text-indigo-600 hover:text-indigo-500">
                Forgot your password?
              </NavLink>
            </div>

            <button
              type="submit"
              disabled={loading}
              className="group relative flex w-full justify-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white hover:bg-indigo-500 disabled:opacity-50"
            >
              <span className="absolute inset-y-0 left-0 flex items-center pl-3">
                <LockClosedIcon className="h-5 w-5 text-indigo-400" />
              </span>

              {loading ? "Signing in..." : "Sign in"}
            </button>

          </form>
        </div>
      </div>
    </>
  )
}